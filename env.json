        "--db-pwd": "",
        "--nocacheuse": "true",
        "--ordinaryapp": "0",
        "--additional": "/DisplayAllFunctions /Lru  /iTaxi /Testmanager",
        "--v8version": "8.3.17"
    },
     "xunit": {
        "--xddConfig": "./tools/JSON/smoke.json",
